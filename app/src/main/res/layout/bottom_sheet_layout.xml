
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"

    android:id="@+id/bottom_sheet_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <Space
        android:layout_width="0dp"
        android:layout_height="64dp"
        />

    <!-- Icono de check -->
    <ImageView
        android:id="@+id/checkIcon"
        android:layout_width="96dp"
        android:layout_height="96dp"

        android:layout_gravity="center_horizontal"/>

    <!-- Texto "Orden completada" -->
    <TextView
        android:id="@+id/completedText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:textStyle="bold"
        />

    <!-- Texto "NÃºmero de orden: xxx" -->
    <TextView
        android:id="@+id/orderNumberText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        />

    <Space
        android:layout_width="0dp"
        android:layout_height="30dp"
        />

<!--**********    First line from data section *************-->

<!--    ******************* List of expandable items ********-->
<!--    List expandable -->



        <ExpandableListView
            android:id="@+id/expandableListView"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:indicatorLeft="?android:attr/expandableListPreferredItemIndicatorLeft"
            android:divider="@android:color/transparent"
            android:dividerHeight="0dp"
            android:layoutDirection="rtl"
            />

<!-- ************************************************************-->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/order_number_color"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        android:layout_marginTop="16dp">
        <TextView
            android:id="@+id/orderText001"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:textSize="14sp" />

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/orderValue001"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        android:layout_marginTop="16dp">
        <TextView
            android:id="@+id/deliveryText001"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:textSize="14sp" />

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/deliveryTextValue001"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        android:layout_marginTop="16dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:text="Summary"
            android:textSize="16sp"
            android:textStyle="bold"
            />

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:text="35.00$"
            android:textSize="16sp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/order_number_color"/>
    <!--******************    End data section ******************-->


    <Space
        android:layout_width="0dp"
        android:layout_height="48dp"
        />

    <!-- Botones Pagar y Cancelar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="16dp">

        <Button
            android:id="@+id/payButton"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:backgroundTint="@android:color/black"
            android:textColor="@android:color/white"
            android:text="Pay Now"
            />

        <Button
            android:id="@+id/cancelButton"
            android:layout_width="match_parent"
            android:layout_height="60dp"

            android:textColor="@android:color/black"
            android:layout_marginTop="5dp"
            style="?attr/materialButtonOutlinedStyle"

            android:text="Cancel"
        />

    </LinearLayout>






</LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>

